<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="395dp"
        android:layout_height="61dp"
        android:hint="Search for a request"
        android:imeOptions="actionSearch"
        android:singleLine="true" />

    <!-- أزرار "طلباتي" و"إنشاء طلب" -->
    <LinearLayout
        android:id="@+id/topButtonsLayout"
        android:layout_below="@id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnMyRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#21E1F3"
            android:text="My request"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNewRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#21E1F3"
            android:text="Create request"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- قائمة الطلبات -->
    <ListView
        android:id="@+id/listView"
        android:layout_below="@id/topButtonsLayout"
        android:layout_above="@id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp" />

    <!-- الشريط السفلي -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:weightSum="3"
        android:padding="4dp">

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/navNotifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iconNotifications"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/notificationbell"
                android:contentDescription="Notifications" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Chats -->
        <LinearLayout
            android:id="@+id/navChats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iconChats"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/messenger"
                android:contentDescription="Chats" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chats"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iconProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/user"
                android:contentDescription="Profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
