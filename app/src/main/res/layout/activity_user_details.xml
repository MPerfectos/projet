<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- اسم المستخدم -->
        <TextView
            android:id="@+id/tvUserName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الاسم"
            android:textSize="20sp"
            android:padding="8dp" />

        <!-- الشركة -->
        <TextView
            android:id="@+id/tvCompany1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الشركة"
            android:textSize="20sp"
            android:padding="8dp" />

        <!-- البريد الإلكتروني -->
        <TextView
            android:id="@+id/tvEmail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="البريد الإلكتروني"
            android:textSize="20sp"
            android:padding="8dp" />

        <!-- رقم الهاتف -->
        <TextView
            android:id="@+id/tvPhone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الهاتف"
            android:textSize="20sp"
            android:padding="8dp" />

        <!-- العمر -->
        <TextView
            android:id="@+id/tvAge1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="العمر"
            android:textSize="20sp"
            android:padding="8dp" />

        <!-- الموقع -->
        <TextView
            android:id="@+id/tvLocation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الموقع"
            android:textSize="20sp"
            android:padding="8dp" />

        <!-- الوصف -->
        <TextView
            android:id="@+id/tvDescription1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الوصف"
            android:textSize="20sp"
            android:padding="8dp" />

        <!-- زر المراسلة -->
        <Button
            android:id="@+id/btnMessage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مراسلة الآن"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
